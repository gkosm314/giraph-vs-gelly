#set JAVA_HOME
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
export PATH=$JAVA_HOME/bin:$PATH

#set HADOOP_HOME
export HADOOP_HOME=/home/user/hadoop-2.8.3
export PATH=$HADOOP_HOME/bin:$PATH

#set HADOOP_OPTS
export HADOOP_OPTS=-Djava.net.preferIPv4Stack=true

#set HADOOP_CONF_DIR
export HADOOP_CONF_DIR=$HADOOP_HOME/etc/hadoop

#set dataset parameters
export DATASET_PARAM_BFS_SOURCE_VERTEX_ID=8
export DATASET_PARAM_SSSP_SOURCE_VERTEX_ID=1
export DATASET_PARAM_PR_NUM_ITERATIONS=2
export DATASET_PARAM_PR_DAMPING_FACTOR=0.85
export DATASET_PARAM_CDLP_MAX_ITERATIONS=2
